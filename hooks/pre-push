#!/bin/bash
# Git hook: pre-push  
# Auto-sync git notes before push operations
# Installed by: git issue setup-sync

# Colors for output
BLUE='\033[0;34m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

# Hook receives remote name and URL as arguments
REMOTE="$1"
URL="$2"

# Check if git-issue notes sync is enabled
if ! git config --get-regexp "git-issue" | grep -q "sync.enabled.*true"; then
    exit 0
fi

# Only sync notes in git repositories (skip XDG mode)
if ! git rev-parse --git-dir >/dev/null 2>&1; then
    exit 0
fi

# Check if we have any issue notes to push
NOTE_REFS=$(git for-each-ref --format="%(refname)" refs/notes/issue-* 2>/dev/null)
if [[ -z "$NOTE_REFS" ]]; then
    # No issue notes to push
    exit 0
fi

NOTE_COUNT=$(echo "$NOTE_REFS" | wc -l)
echo -e "${BLUE}🔄 Pushing $NOTE_COUNT issue notes to $REMOTE...${NC}"

# Push issue notes to remote
if git push "$REMOTE" refs/notes/issue-*; then
    echo -e "${GREEN}✓ Successfully pushed issue notes${NC}"
else
    echo -e "${YELLOW}⚠️  Failed to push some issue notes (this may be normal for new remotes)${NC}"
    # Don't fail the push - notes sync failure shouldn't block code push
    exit 0
fi

# Optional: push commit notes too if they exist
if git rev-parse refs/notes/commits >/dev/null 2>&1; then
    git push "$REMOTE" refs/notes/commits 2>/dev/null || true
fi

exit 0