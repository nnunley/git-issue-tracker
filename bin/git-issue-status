#!/bin/bash
# Quick issue status report

set -e

# Colors
BLUE='\033[0;34m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

echo -e "${BLUE}ðŸ“Š Issue Status Report${NC}"
echo -e "Generated: $(date)"
echo ""

# Count issues by state
open_count=0
in_progress_count=0
done_count=0
blocked_count=0

# Count by priority
high_count=0
medium_count=0
low_count=0

# Process each issue
for ref in $(git for-each-ref --format="%(refname)" refs/notes/issue-* 2>/dev/null | sort); do
    if git notes --ref="$ref" show >/dev/null 2>&1; then
        data=$(git notes --ref="$ref" show 2>/dev/null)
        state=$(echo "$data" | grep "^state:" | cut -d' ' -f2)
        priority=$(echo "$data" | grep "^priority:" | cut -d' ' -f2)
        
        case "$state" in
            open) ((open_count++)) ;;
            in-progress) ((in_progress_count++)) ;;
            done) ((done_count++)) ;;
            blocked) ((blocked_count++)) ;;
        esac
        
        case "$priority" in
            high|critical) ((high_count++)) ;;
            medium) ((medium_count++)) ;;
            low) ((low_count++)) ;;
        esac
    fi
done

total=$((open_count + in_progress_count + done_count + blocked_count))

echo -e "${YELLOW}Summary:${NC}"
echo "Total Issues: $total"
echo ""

echo -e "${YELLOW}By State:${NC}"
echo "â€¢ Open: $open_count"
echo "â€¢ In Progress: $in_progress_count"
echo "â€¢ Done: $done_count"
echo "â€¢ Blocked: $blocked_count"
echo ""

echo -e "${YELLOW}By Priority:${NC}"
echo "â€¢ High/Critical: $high_count"
echo "â€¢ Medium: $medium_count"
echo "â€¢ Low: $low_count"
echo ""

echo -e "${YELLOW}Open Issues by Priority:${NC}"
"$(dirname "$0")/git-issue" list | grep -E "\[open\]" | sort -t: -k2 -r